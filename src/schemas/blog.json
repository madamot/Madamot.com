{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title",
        "placeholder": "Blog Title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Slug"
      }
    },
    "date": {
      "type": "Date",
      "config": {
        "label": "date"
      }
    },
    "category": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": [
          "blog"
        ],
        "label": "Category"
      }
    },
    "description": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph",
        "label": "Description",
        "placeholder": "Short description for the project in thumbnail"
      }
    },
    "blog_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1500,
          "height": 750
        },
        "thumbnails": [],
        "label": "Blog Image"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "code_snippets": [
            {
              "name": "jsx",
              "display": "jsx"
            },
            {
              "name": "html",
              "display": "html"
            },
            {
              "name": "css",
              "display": "css"
            },
            {
              "name": "python",
              "display": "python"
            }
