            {
              "name": "html",
              "display": "html"
            },
            {
              "name": "js",
              "display": "js"
            },
            {
              "name": "jsx",
              "display": "jsx"
            },
            {
              "name": "css",
              "display": "css"
            },
            {
              "name": "python",
              "display": "python"
            },
            {
              "name": "terminal",
              "display": "terminal"
            }
          ],
          "embeded_video": []
        },
        "choices": {
          "text": {
            "type": "Slice",
            "fieldset": "Text",
            "description": "Rich Text Section",
            "icon": "text_fields",
            "non-repeat": {
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "label": "text",
                  "placeholder": "Your content here"
                }
              }
            },
            "repeat": {
              "heading": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2, heading3, heading4, heading5, heading6",
                  "label": "Heading",
                  "placeholder": "Heading"
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "label": "Text",
                  "placeholder": "Add descriptions here"
                }
              }
            },
            "display": "list"
          },
          "image": {
            "type": "Slice",
            "fieldset": "Image",
            "description": "Image",
            "icon": "image",
            "display": "list",
            "non-repeat": {},
            "repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 1500,
                    "height": 750
                  },
                  "thumbnails": [
                    {
                      "name": "Smaller",
                      "width": 750,
                      "height": 750
                    }
                  ],
                  "label": "Image"
                }
              }
            }
          },
          "code_snippet": {
            "type": "Slice",
            "fieldset": "Code Snippet",
